@{ 
    ViewBag.Title = "登录界面";
   Layout = null;
   
   }

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>欢迎登录后台管理系统</title>
    @RenderPage("~/Views/includeM/head.cshtml")
    <script src="/Static/Home/js/cloud.js"></script>
    <script src="~/Static/Home/js/Login.js"></script>
   
    <script type="text/javascript">
            jQuery(function () {
                jQuery('.loginbox').css({
                    'position': 'absolute',
                    'left': (jQuery(window).width() - 692) / 2
                });

                jQuery(window).resize(function () {
                    jQuery('.loginbox').css({
                        'position': 'absolute',
                        'left': (jQuery(window).width() - 692) / 2
                    });
                });

                var viewModel = new loginViewModel();
                viewModel.init();
            });
        </script>

</head>
<body style="background-color:#1c77ac; background-image:url(/Static/Home/img/light.png); background-repeat:no-repeat; background-position:center top; overflow:hidden;">
    <div id="mainBody">
        <div id="cloud1" class="cloud"></div>
        <div id="cloud2" class="cloud"></div>
    </div>

    <div class="logintop">
        <span>欢迎登录后台管理界面平台</span>
        <ul>
            <li>
                <a href="./">回首页</a>
            </li>
            <li>
                <a href="#">帮助</a>
            </li>
            <li>
                <a href="#">关于</a>
            </li>
        </ul>
    </div>

    <div class="loginbody">
        <span class="systemlogo"></span>
        <div class="loginbox">
                <ul>
                    <li><input name="txtName" id="txtName" type="text" class="loginuser" value="" /></li>
                    <li><input name="txtPwd" id="txtPwd" type="password" class="loginpwd" value="" /></li>
                    <li><input name="btn_login" id="btn_login" type="submit" class="loginbtn" value="登录" /></li>
                </ul>
        </div>
    </div>
    <div class="loginbm"></div>
</body>

</html>